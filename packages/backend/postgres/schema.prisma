datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/streamvault"
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model Stream {
  id        String   @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  thumbnail String
  description String
  category String
}

model User {
  id        String   @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  userId    String   @unique
}
