datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/streamvault"
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model Video {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  thumbnail   String
  description String
  category    String
  isStreaming Boolean
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  videos    Video[]
}
